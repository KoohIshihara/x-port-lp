module-content-work
  div.wrap-module
    h2 {opts.content.label}
    div.wrap-explain.mt20
      p {opts.content.explain}
    div.wrap-prof.mt12
      p {opts.content.name}
      p {opts.content.belonging}
    div.wrap-img.mt40
      img(each='{item in imgs}', src='{item}')
      
  style(scoped, type='less').
    :scope {
      display: block;
      background: #2B45F4;
      .wrap-module { 
        width: 92%;
        max-width: 948px;
        margin: 0 auto;
        h2 {
          color: #fff;
        }
        .wrap-explain {
          p {
            color: #FFF;
            font-weight: lighter;
          }
        }
        .wrap-prof {
          p {
            color: #FFF;
            text-align: right;
            font-weight: lighter;
          }
        }
      }
    }

  script.


    this.imgs = opts.content.imgs;
    
