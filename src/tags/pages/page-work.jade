page-work.pb40
  module-header-work
  module-content-work(content='{ this.content }')
  module-footer
  

  style(scoped, type='less').
    :scope {
      overflow: scroll;
      //- background: #2B45F4;
      position: fixed;
      width: 100%;
      height: 100%;
      min-height: 100vh;
      top: 0;
      left: 0;
      display: block;
      ::selection {
        color: #FFFF00;
        background: #2B45F4;
      }
      module-header-work {
        background: #2B45F4;
      }
      module-content-work {
        background: #2B45F4;
      }
      module-footer {
        display: block;
        position: absolute;
      }
    }

  script.

    this.content = opts.__proto__.content;

    this.on('updated', function(){
      GLOB.scrollPoint = 'module-works';

      setTimeout(function() {
        $('app').addClass('not-opacity');
      }, 400);
    });
